@using TestingVGLTU.ViewModel
@model RegistrationViewModel
@{
    ViewData["Title"] = "Регистрация";
}

<div class="container-reg">
    <div class="container-top">
        <div class="container-btnst">
            <div id="rfbtn">
                <a id="btnStudent" class="right-rfbtn rfbtn rfbtnActive">Студент</a>
                <a id="btnTeacher" class="rfbtn">Преподаватель</a>
            </div>
        </div>
        <h1>Регистрация</h1>
    </div>
    <div>
        <form asp-action="Registration" asp-controller="Registration" method="post">
            <div class="container-center">
                <div class="container-textBox">
                    <div class="textBox">
                        <p>Фамилия</p>
                        <input type="text" asp-for="Surname" placeholder="Введите фамилию..." />
                    </div>
                    <div class="textBox">
                        <p>Имя</p>
                        <input type="text" asp-for="Name" placeholder="Введите имя..." />
                    </div>
                    <div class="textBox">
                        <p>Отчество</p>
                        <input type="text" asp-for="Patronymic" placeholder="Введите отчество..." />
                    </div>
                </div>
                <div class="container-textBox">
                    <div class="textBox">
                        <p>Логин</p>
                        <input type="text" asp-for="Login" placeholder="Введите логин..." />
                    </div>
                    <div class="textBox">
                        <p>Пароль</p>
                        <input type="password" asp-for="Password" placeholder="Введите пароль..." />
                    </div>
                    <div class="textBox">
                        <p>Повторите пароль</p>
                        <input type="password" asp-for="PasswordCopy" placeholder="Введите пароль..." />
                    </div>
                </div>
                <div id="studentInput" class="container-textBox">
                    <div class="textBox">
                        <p>Номер зачётной книжки</p>
                        <input type="text" asp-for="NumberRecordBook" placeholder="Введите номер..." />
                    </div>
                    <div class="textBox">
                        <p>Группа</p>
                        <input type="text" asp-for="Group" placeholder="Введите группу..." />
                    </div>
                    <div class="textBox">
                    </div>
                </div>
            </div>
            <div class="btn">
                <button class="button" type='submit'>Зарегистрироваться</button>
                <a class="buttonHide" asp-controller="Authorization" asp-action="Login">назад</a>
            </div>
        </form>
    </div>
</div>
<script src="~/js/scriptRfBtn.js" asp-append-version="true"></script>
<script src="~/js/scriptRegistration.js" asp-append-version="true"></script>