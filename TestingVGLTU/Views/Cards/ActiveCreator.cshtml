@{
    ViewData["Title"] = "Активные тестирования";
    Layout = "~/Views/Shared/_LayoutCreator.cshtml";
}

<div class="page-card container-card">
    <main class="page-active-teacher">
        <div class="card">
            <div class="test-info">
                <div class="top">
                    <div class="type">
                        <span>Тест</span>
                    </div>
                </div>
                <div class="center">
                    <div class="name">
                        <span> Проектирование и дизайн инф. систем </span>
                    </div>
                    <div class="info">
                        <div class="item">
                            <img src="~/img/icons/eye.svg" alt="" />
                            <span>просмотров 14 </span>
                        </div>
                        <div class="item">
                            <img src="~/img/icons/done.svg" alt="" />
                            <span>пройденных 10 </span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="bottom">
                <a class="btn-complete">завершить</a>
                <a class="btn-start" asp-area="" asp-controller="CreateTesting" asp-action="TestingEditor">Перейти</a>
            </div>
        </div>
    </main>
</div>
<script src="~/js/scriptActiveHistoryInfo.js" asp-append-version="true"></script>
<script src="~/js/scriptClear.js" asp-append-version="true"></script>
<script src="~/js/scriptbtnBackHide.js" asp-append-version="true"></script>