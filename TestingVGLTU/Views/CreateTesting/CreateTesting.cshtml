@using TestingVGLTU.Models.ViewModel
@model CreateTestingViewModel
@{
    ViewData["FullName"] = ViewBag.Message;
    ViewData["Title"] = "Создание тестирования";
    Layout = "~/Views/Shared/_LayoutCreator.cshtml";
}

<div class="create-test-page2 container-card">
    <main>
        <form asp-action="CreateTesting" asp-controller="CreateTesting" method="post">
            <div class="create-test-panel test-settings">

                <div class="top">
                    <span>Создание тестирования</span>
                </div>
                <div class="center">
                    <div class="textBox">
                        <p>Название</p>
                        <input type="text" asp-for=Name placeholder="Введите название..." />
                    </div>
                    <div class="comboBox">
                        <p>Тип</p>
                        <select name="Type" asp-for=Type>
                            @foreach(var item in Model.TypeTesting ?? new())
                            {
                                <option value="@item">@item</option>
                            }
                        </select>
                    </div>

                    <div class="comboBox2">
                        <p>Вывод результата</p>
                        <select name="OutputOfResult" asp-for=OutputOfResult>
                            @foreach (var item in Model.TypeOutputOfResult ?? new())
                            {
                                <option value="@item">@item</option>
                            }
                        </select>
                    </div>
                    <div class="counterBox">
                        <p>Попытки</p>
                        <div class="counter">
                            <button type="button" id="btn-minus">
                                <img src="~/img/icons/-.svg" alt="-" />
                            </button>
                            <input id="counter-input" type="number" asp-for=Attempts  value="1" />
                            <button type="button" id="btn-plus">
                                <img src="~/img/icons/+.svg" alt="+" />
                            </button>
                        </div>
                    </div>
                    <div class="bottom">
                        <div class="textBox">
                            <p>Время</p>
                            <input type="number" asp-for=Time step="1" min="1"  value="1" placeholder="Время..." />
                        </div>
                        <button type="submit">Далее</button>
                    </div>
                </div>
            </div>
        </form>
    </main>
</div>
<script src="~/js/scriptClear.js" asp-append-version="true"></script>
<script src="~/js/scriptCounter.js" asp-append-version="true"></script>